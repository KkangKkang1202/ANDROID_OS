<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="5"
    android:rowCount="9"

    tools:context=".MainActivity">


    <EditText
        android:id="@+id/EditText1"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:hint="숫자1 입력">
    </EditText>


    <EditText
        android:id="@+id/EditText2"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:hint="숫자2 입력">
    </EditText>


    <Button
        android:id="@+id/NumButton0"
        android:text="0"
        android:layout_width="80dp"
        android:layout_margin="1dp"
        android:layout_column="0"
        android:layout_row="2">
    </Button>


    <Button
        android:id="@+id/NumButton1"
        android:text="1"
        android:layout_width="80dp"
        android:layout_margin="1dp"
        android:layout_column="1"
        android:layout_row="2">
    </Button>


    <Button
        android:id="@+id/NumButton2"
        android:text="2"
        android:layout_width="80dp"
        android:layout_margin="1dp"
        android:layout_column="2"
        android:layout_row="2">
    </Button>


    <Button
        android:id="@+id/NumButton3"
        android:text="3"
        android:layout_width="80dp"
        android:layout_margin="1dp"
        android:layout_column="3"
        android:layout_row="2">
    </Button>


    <Button
        android:id="@+id/NumButton4"
        android:text="4"
        android:layout_width="80dp"
        android:layout_margin="1dp"
        android:layout_column="4"
        android:layout_row="2">
    </Button>


    <Button
        android:id="@+id/NumButton5"
        android:text="5"
        android:layout_width="80dp"
        android:layout_margin="1dp"
        android:layout_column="0"
        android:layout_row="3">
    </Button>


    <Button
        android:id="@+id/NumButton6"
        android:text="6"
        android:layout_width="80dp"
        android:layout_margin="1dp"
        android:layout_column="1"
        android:layout_row="3">
    </Button>


    <Button
        android:id="@+id/NumButton7"
        android:text="7"
        android:layout_width="80dp"
        android:layout_margin="1dp"
        android:layout_column="2"
        android:layout_row="3">
    </Button>


    <Button
        android:id="@+id/NumButton8"
        android:text="8"
        android:layout_width="80dp"
        android:layout_margin="1dp"
        android:layout_column="3"
        android:layout_row="3">
    </Button>


    <Button
        android:id="@+id/NumButton9"
        android:text="9"
        android:layout_width="80dp"
        android:layout_margin="1dp"
        android:layout_column="4"
        android:layout_row="3">
    </Button>


    <Button
        android:id="@+id/ButtonAdd"
        android:text="더하기"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp">
    </Button>


    <Button
        android:id="@+id/ButtonSub"
        android:text="빼기"
        android:layout_column="0"
        android:layout_row="5"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp">
    </Button>


    <Button
        android:id="@+id/ButtonMul"
        android:text="곱하기"
        android:layout_column="0"
        android:layout_row="6"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp">
    </Button>


    <Button
        android:id="@+id/ButtonDiv"
        android:text="나누기"
        android:layout_column="0"
        android:layout_row="7"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp">
    </Button>


    <TextView
        android:id="@+id/TextResult"
        android:layout_margin="5dp"
        android:text="계산 결과:"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:textSize="20dp"
        android:textColor="#ff0000">

    </TextView>
</GridLayout>













